{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"moduleResolution": "bundler",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@app/*": ["./src/app/*"],
			"@components/*": ["./src/components/*"],
			"@lib/*": ["./src/lib/*"]
		},
		"incremental": true
	},

	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "../../packages/shared"
		}
	]
}
