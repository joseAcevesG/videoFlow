{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"moduleResolution": "node16"
	},
	"include": ["src"],
	"references": [
		{
			"path": "../../packages/shared"
		}
	]
}
